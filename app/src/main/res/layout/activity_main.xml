<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:background="#cccccc"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout1"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:textSize="52sp"
            android:textColor="#000000"
            android:id="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="right"
            android:singleLine="true"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout1"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="メモリ"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="履歴"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_title"
        android:layout_above="@+id/row1"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        >

        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_marginRight="5dp"/>

        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/listView2"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/row2">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="M+"
            android:id="@+id/memorysave"
            bootstrap:bb_type="default"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="addList"
            android:textStyle="bold" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:id="@+id/swich"
            bootstrap:bb_type="default"
            android:textStyle="bold"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CLR"
            android:id="@+id/clear"
            bootstrap:bb_type="default"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="viewNumber"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="←"
            android:id="@+id/back"
            bootstrap:bb_type="default"
            android:layout_column="3"
            android:layout_row="0"
            android:onClick="viewNumber"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/row3">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/number7"
            bootstrap:bb_type="default"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="viewNumber"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/number8"
            bootstrap:bb_type="default"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="viewNumber"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/number9"
            bootstrap:bb_type="default"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="viewNumber"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/divi"
            android:layout_column="3"
            android:layout_row="1"
            android:onClick="viewNumber"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/row4">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/number4"
            bootstrap:bb_type="default"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="viewNumber"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/number5"
            android:onClick="viewNumber"
            android:layout_column="1"
            android:layout_row="2"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/number6"
            bootstrap:bb_type="default"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="viewNumber"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/multi"
            bootstrap:bb_type="default"
            android:layout_column="3"
            android:layout_row="2"
            android:onClick="viewNumber"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/row5">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/number1"
            bootstrap:bb_type="default"
            android:onClick="viewNumber"
            android:layout_column="0"
            android:layout_row="3"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/number2"
            bootstrap:bb_type="default"
            android:onClick="viewNumber"
            android:layout_column="1"
            android:layout_row="3"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/number3"
            bootstrap:bb_type="default"
            android:layout_column="2"
            android:layout_row="3"
            android:onClick="viewNumber"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/minus"
            bootstrap:bb_type="default"
            android:layout_column="3"
            android:layout_row="3"
            android:onClick="viewNumber"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/dot"
            bootstrap:bb_type="default"
            android:layout_column="0"
            android:layout_row="4"
            android:onClick="viewNumber"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/number0"
            bootstrap:bb_type="default"
            android:layout_column="1"
            android:layout_row="4"
            android:onClick="viewNumber"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/equal"
            bootstrap:bb_type="default"
            android:layout_column="2"
            android:layout_row="4"
            android:onClick="viewNumber"
            android:textStyle="bold"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/plus"
            bootstrap:bb_type="default"
            android:layout_column="3"
            android:layout_row="4"
            android:onClick="viewNumber"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>